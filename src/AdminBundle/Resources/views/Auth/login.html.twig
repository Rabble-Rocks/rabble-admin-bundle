{% extends '@RabbleAdmin/Auth/base.html.twig' %}
{% trans_default_domain 'RabbleAdminBundle' %}
{% block title %}{{ 'auth.login.title'|trans }}{% endblock %}
{% block page_content %}
    <h4 class="fw-300 c-grey-900 mB-40">{{ 'auth.login.title'|trans }}</h4>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post">
        <div class="form-group"><label class="text-normal text-dark" for="username">{{ 'auth.login.username_label'|trans }}</label> <input type="text" id="username" name="username" class="form-control" placeholder="{{ 'auth.login.username_placeholder'|trans }}" value="{{ lastUsername }}"></div>
        <div class="form-group"><label class="text-normal text-dark" for="password">{{ 'auth.login.password_label'|trans }}</label> <input type="password"  id="password" name="password" class="form-control" placeholder="{{ 'auth.login.password_placeholder'|trans }}"></div>
        <div class="form-group">
            <div class="peers ai-c jc-sb fxw-nw">
                <div class="peer">
                    {% if rememberMe %}
                        <div class="checkbox checkbox-circle checkbox-info peers ai-c"><input type="checkbox" id="remember_me" name="_remember_me" class="peer"> <label for="remember_me" class="peers peer-greed js-sb ai-c"><span class="peer peer-greed">{{ 'auth.login.remember_me_label'|trans }}</span></label></div>
                    {% endif %}
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="peer"><button type="submit" class="btn btn-primary">{{ 'auth.login.button_label'|trans }}</button></div>
            </div>
        </div>
    </form>
{% endblock %}