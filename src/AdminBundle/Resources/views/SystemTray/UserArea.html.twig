<li class="dropdown">
    {% set user = app.user %}
    <a href="#" class="dropdown-toggle no-after peers fxw-nw ai-c lh-1" data-toggle="dropdown" aria-expanded="true">
        {% set avatar = asset('admin/build/assets/static/images/default-avatar.png') %}
        {% if user.avatar is defined and user.avatar is not null %}
            {% set avatar = user.avatar %}
        {% endif %}
        <div class="peer mR-10"><img class="w-2r bdrs-50p" src="{{ avatar }}" alt=""></div>
        <div class="peer"><span class="fsz-sm c-grey-900">
                {% if user.firstName is defined %}
                    {{ user.firstName }}
                    {% if user.lastName is defined %}
                        {{ user.lastName }}
                    {% endif %}
                {% else %}
                    {{ user.username|capitalize }}
                {% endif %}
            </span></div>
    </a>
    <ul class="dropdown-menu fsz-sm">
        {{ content|raw }}
    </ul>
</li>